PORT=3000

# Database Configuration
# Note: docker-compose uses Postgres on port 5432 by default
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=main

# JWT Configuration
JWT_SECRET=some_secret_for_jwt
JWT_EXPIRES_IN=7d

# Google Cloud Configuration - MP4 Video Storage
# Required: Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Required: Name of the Google Cloud Storage bucket for MP4 video files
# Recommendation: Use a dedicated bucket for MP4 videos (e.g., "your-app-mp4-videos")
GOOGLE_CLOUD_BUCKET_NAME=your-mp4-video-bucket-name

# Authentication Options (choose one):

# Option 1: Service Account Key File (not recommended for production)
# GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# Option 2: Workload Identity Federation (recommended)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/workload-identity-credentials.json
# GOOGLE_CLOUD_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Option 3: Application Default Credentials (if running on Google Cloud)
# Leave authentication variables empty to use ADC/Workload Identity automatically

# MP4 Video Configuration
# Maximum MP4 video file size in MB (optional - for application logic)
MAX_VIDEO_SIZE_MB=500
# Supported video format (MP4 only)
SUPPORTED_VIDEO_FORMAT=mp4

